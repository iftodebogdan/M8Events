<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main"
        android:contentDescription="@string/background_image_content_description" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/eventsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/events_icon"
            android:clickable="true"
            android:onClick="startEventsListActivity"
            android:contentDescription="@string/events_icon_content_description" />

        <ImageView
            android:id="@+id/facebookLogoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/f_logo"
            android:clickable="true"
            android:onClick="openFacebookPage"
            android:contentDescription="@string/facebook_logo_icon_content_description" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/buttonLayout" >

        <TextView
            android:id="@+id/eventButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/events_button_text"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/facebookButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/facebook_button_text"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>