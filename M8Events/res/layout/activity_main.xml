<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main"
        android:contentDescription="@string/content_description_background_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/eventsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/events_icon"
            android:clickable="true"
            android:onClick="startEventsListActivity"
            android:contentDescription="@string/content_description_events_icon" />

        <ImageView
            android:id="@+id/facebookLogoIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/f_logo"
            android:clickable="true"
            android:onClick="openFacebookPage"
            android:contentDescription="@string/content_description_facebook_logo_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/eventButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_text_events"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/facebookButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_text_facebook"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/buttonLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp" >

        <ImageView
            android:id="@+id/contactUsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/contact_us_icon"
            android:clickable="true"
            android:onClick="contactUs"
            android:contentDescription="@string/content_description_contact_us_icon" />

        <ImageView
            android:id="@+id/aboutUsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/about_us_icon"
            android:clickable="true"
            android:onClick="aboutUs"
            android:contentDescription="@string/content_description_about_us_icon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/contactUsButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_text_contact_us"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/aboutUsButtonTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/button_text_about_us"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@android:color/white" />

    </LinearLayout>
    
    </LinearLayout>

</RelativeLayout>